generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataproxy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gym {
  id        String    @id @default(uuid())
  name      String
  address   String
  image_url String?
  site      String?
  Problem   Problem[]
}

model Problem {
  id        String   @id @default(uuid())
  gym_id    String
  gym       Gym      @relation(fields: [gym_id], references: [id])
  setter_id String
  setter    User     @relation(fields: [setter_id], references: [id])
  date      DateTime
  image_url String
  color     String
  gym_grade String
  hold_type String?
  wall_type String?
  style     String?
  Send      Send[]
  Like      Like[]
}

model User {
  id      String    @id @default(uuid())
  email   String    @unique
  name    String
  Problem Problem[]
  Send    Send[]
  Like    Like[]
}

model Send {
  problem_id String
  problem    Problem  @relation(fields: [problem_id], references: [id])
  user_id    String
  sender     User     @relation(fields: [user_id], references: [id])
  date       DateTime
  grade      String
  attempts   String

  @@id([problem_id, user_id])
}

model Like {
  problem_id String
  problem    Problem @relation(fields: [problem_id], references: [id])
  user_id    String
  user       User    @relation(fields: [user_id], references: [id])

  @@id([problem_id, user_id])
}
